datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String    @id @default(cuid())
  name    String
  email   String    @unique
  meetups Meetup[]  @relation(references: [id])
  groups  Group[]   @relation(references: [id])
}

model Group {
  id      String    @id
  name    String
  users   User[]    @relation(references: [id])
  meetups Meetup[] 
}

model Meetup {
  id          String  @id
  name        String
  coordinates Float[]
  users       User[]  @relation(references: [id])

  Group       Group?  @relation(fields: [groupId], references: [id])
  groupId     String?
}
