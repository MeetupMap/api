datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique 
  groups        Group[]
}

model Group {
  id        String      @id
  name      String
  Meetups   GroupOnMeetup[] 
  Users     User[]
}

model Meetup {
  id            String  @id
  name          String
  coordinates   Float[]
  Groups        GroupOnMeetup[]
}

model GroupOnMeetup {
  Group     Group     @relation(fields: [GroupId], references:[id])
  GroupId   String    
  Meetup    Meetup    @relation(fields: [MeetupId], references:[id])
  MeetupId  String
  
  @@id([GroupId, MeetupId])
}